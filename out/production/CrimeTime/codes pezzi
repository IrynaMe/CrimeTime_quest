public class TicTacToeGrid {
    public static void main(String[] args) {
        drawGrid();
    }

    public static void drawGrid() {
        // Define the horizontal and vertical lines of the grid
        String horizontalLine = " --- --- --- ";
        String verticalLine = "|   |   |   |";

        // Draw the grid by printing the lines to the console
        for (int i = 0; i < 3; i++) {
            System.out.println(horizontalLine);
            System.out.println(verticalLine);
            System.out.println(verticalLine);
            System.out.println(verticalLine);
        }
        System.out.println(horizontalLine);
    }
}


public class TicTacToeGrid {
    public static void main(String[] args) {
        drawGrid();
    }

    public static void drawGrid() {
        // Define the horizontal and vertical lines of the grid
        String horizontalLine = "-----------";
        String verticalLine = " | ";

        // Draw the grid by printing the lines to the console
        System.out.println(verticalLine + verticalLine + verticalLine);
        System.out.println(horizontalLine);
        System.out.println(verticalLine + verticalLine + verticalLine);
        System.out.println(horizontalLine);
        System.out.println(verticalLine + verticalLine + verticalLine);
    }
}





